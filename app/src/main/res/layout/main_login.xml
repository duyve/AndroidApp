<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".mainActivities$SignupActivity"
    android:background="@drawable/back">


    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:hint="Email"
        android:textColorHint="@color/colorPrimary"
        android:ems="10"
        android:id="@+id/LoginTextEmail"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="79dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:hint="Password"
        android:textColorHint="@color/colorPrimary"
        android:ems="10"
        android:id="@+id/LoginTextPassword"
        android:layout_below="@+id/LoginTextEmail"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Log in"
        android:fontFamily=""
        android:id="@+id/LoginButtonSubmit"
        android:layout_below="@+id/LoginTextPassword"
        android:layout_centerHorizontal="true"
        android:background="@drawable/button_selector"
        android:textColor="@color/white"
        android:onClick="loginAccount"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Forgot Password?"
        android:textColor="@color/colorPrimary"
        android:id="@+id/LoginTextForgotPassword"
        android:onClick="switchToForgot"
        android:textSize="20dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Sign up"
        android:textColor="@color/colorPrimary"
        android:id="@+id/LoginTextSignup"
        android:onClick="switchToSignup"
        android:textSize="20dp"
        android:layout_below="@+id/LoginTextForgotPassword"
        android:layout_centerHorizontal="true" />
</RelativeLayout>