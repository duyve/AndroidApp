<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingStart="@dimen/activity_horizontal_margin"
    android:paddingEnd="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".EditResume">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/header"
            android:id="@+id/EditResumeTextHeaderTitle" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/EditResumeLinearLayoutHeader"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/editHeader"
            android:drawableStart="@drawable/edit_pencil"
            android:drawablePadding="7dp"
            android:id="@+id/EditResumeButtonEditHeader"
            android:onClick="onClick"
            android:background="@drawable/button_selector"
            android:textColor="@color/white"
            android:paddingEnd="15dp"
            android:paddingStart="5dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/education"
            android:id="@+id/EditResumeTextEducationTitle" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/EditResumeLinearLayoutEducation" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/editEducation"
            android:drawableStart="@drawable/edit_pencil"
            android:drawablePadding="7dp"
            android:id="@+id/EditResumeButtonEditEducation"
            android:onClick="onClick"
            android:background="@drawable/button_selector"
            android:textColor="@color/white"
            android:paddingEnd="15dp"
            android:paddingStart="5dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/workExperience"
            android:id="@+id/EditResumeTextExperienceTitle" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/EditResumeLinearLayoutExperience" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/editWorkExperience"
            android:drawableStart="@drawable/edit_pencil"
            android:drawablePadding="7dp"
            android:id="@+id/EditResumeButtonExperience"
            android:onClick="onClick"
            android:background="@drawable/button_selector"
            android:textColor="@color/white"
            android:paddingEnd="15dp"
            android:paddingStart="5dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/activities"
            android:id="@+id/EditResumeTextActivitiesTitle" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/EditResumeLinearLayoutActivities" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/editActivities"
            android:drawableStart="@drawable/edit_pencil"
            android:drawablePadding="7dp"
            android:id="@+id/EditResumeButtonActivities"
            android:onClick="onClick"
            android:background="@drawable/button_selector"
            android:textColor="@color/white"
            android:paddingEnd="15dp"
            android:paddingStart="5dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/skills"
            android:id="@+id/EdtResumeTextSkillsTitle" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/EditResumeLinearLayoutSkills" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/editSkills"
            android:drawableStart="@drawable/edit_pencil"
            android:drawablePadding="7dp"
            android:id="@+id/EditResumeButtonSkills"
            android:onClick="onClick"
            android:background="@drawable/button_selector"
            android:textColor="@color/white"
            android:paddingEnd="15dp"
            android:paddingStart="5dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="References"
            android:id="@+id/EditResumeTextReferencesTitle" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/EditResumeLinearLayoutReferences" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Edit References"
            android:drawableStart="@drawable/edit_pencil"
            android:drawablePadding="7dp"
            android:id="@+id/EditResumeButtonReferences"
            android:onClick="onClick"
            android:background="@drawable/button_selector"
            android:textColor="@color/white"
            android:paddingEnd="15dp"
            android:paddingStart="5dp"/>
    </LinearLayout>

</ScrollView>